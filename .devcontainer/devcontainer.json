{
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "darkriszty.markdown-table-prettify",
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "exiasr.hadolint",
        "fill-labs.dependi",
        "github.vscode-github-actions",
        "ldez.ignore-files",
        "llvm-vs-code-extensions.vscode-clangd",
        "redhat.vscode-yaml",
        "richie5um2.vscode-sort-json",
        "rust-lang.rust-analyzer",
        "ryanluker.vscode-coverage-gutters",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens",
        "vadimcn.vscode-lldb",
        "wolfmah-vscode.just-syntax"
      ],
      "settings": {
        "hadolint.hadolintPath": "/usr/local/bin/hadolint"
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,readonly",
    "source=${localEnv:HOME}/.git-credentials,target=/root/.git-credentials,type=bind,readonly"
  ],
  "name": "udpipe-rs",
  "postCreateCommand": "cargo fetch",
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
}
